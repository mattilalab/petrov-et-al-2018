#  ADVISED OF THE POSSIBILITY OF SUCH DAMAGE.

CWD=$(pwd)
TMP=${TMP:-/tmp/01_memePrepUnknown}

# Path to where the chromosome sequences are. Each species should be
# has its own subfolder (Latin_name). The subfolder should contain the
# chromosome (in fasta) where your gene is in that particular animal.
# Chromosome sequences were retrieved from NCBI. Example:
# "/var/tmp/chromosomes/Mus_musculus/*.fa"
CHROMO=${CHROMO:-/var/tmp/chromosomes/}

# Bed files with genomic coordinates, generated by UCSC's liftOver.
# Their name should start with the latin name of the organism. Example:
# "bedFiles/Mus_musculus-*.bed"
BEDDIR=${BEDDIR:-bedUnknown}

# A list of species that will be considered. Latin names of the
# organisms should be in a single column. Example:
# Homo_sapiens
# Mus_musculus
# ..etc
SPLIST=${SPLIST:-species.txt}

# Region names, one region per row
TRFACT=${TRFACT:-regions.txt}

# Temporary work directories
BED=tmpBED
FAS=tmpFAS
SPE=tmpSpeciesBED
OUT=output

# Pretty sequences output.
PRETTY=${PRETTY:-regionPretty}

mkdir -p $TMP
cd $TMP

rm -rf $BED $FAS $SPE $OUT $PRETTY
mkdir -p $BED $FAS $SPE $OUT $PRETTY

# Set the latin name of each species from the list as variable $SPECIES
# Set UCSC chromosome name as variable
# Set NCBI chromosome name as variable
# Copy bed file for each species in the list
# Change the header name in the bed file to the one used by NCBI
# Define the four columns of the bed file as variables
# Echo chromosome coordinates of each TF region to a new file
# Extract fasta sequences
# Change NCBI header name to species name
while read -r animal ; do
 SPECIES=$animal
 UCSC=$(head -n 1 $CWD/$BEDDIR/$SPECIES-*.bed | awk '{print $1}')
 NCBI=$(head -n 1 $CHROMO/$SPECIES/*.fa | awk '{print $1}' | sed "s:>::")
 cp -a $CWD/$BEDDIR/$SPECIES-*.bed $BED/$SPECIES.bed
 sed -i "s:$UCSC:$NCBI:g" $BED/$SPECIES.bed
  while read -r a b c d ; do
   CHR=$a
   START=$b
   END=$c
   TF=$d
   echo "$CHR	$START	$END" > $SPE/$TF.bed
   fastaFromBed -fi $CHROMO/$SPECIES/*.fa -bed $SPE/$TF.bed > $FAS/${TF}_${SPECIES}.fa
   sed -i "s:$NCBI:$SPECIES:g" $FAS/${TF}_${SPECIES}.fa
  done < $BED/$SPECIES.bed
done < $CWD/$SPLIST

# Combine analogous TF regions 
while read -r tf ; do
 FACTOR=$tf
 cat $FAS/${FACTOR}_*.fa >> $OUT/$FACTOR.fa
done < $CWD/$TRFACT

# Make pretty
for i in $OUT/*.fa ; do
 NAME=$(basename $i .fa)
 fastaclean $i > $PRETTY/${NAME}_clean.fa
 sed -i "s/:filter(clean)//g" $PRETTY/${NAME}_clean.fa
done

# Clean up temporary files? Default is 'no'.
# rm -rf $BED $FAS $SPE $OUT
